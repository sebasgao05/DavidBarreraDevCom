{
  "name": "david-barrera-portafolio",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@types/node": "^16.18.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "framer-motion": "^10.16.0",
    "i18next": "^23.7.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^13.5.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.0",
    "autoprefixer": "^10.4.0",
    "lighthouse": "^11.0.0",
    "postcss": "^8.4.0",
    "sharp": "^0.32.6",
    "tailwindcss": "^3.3.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "build:prod": "node scripts/optimize-images.js && npm run build",
    "validate": "node scripts/build-and-validate.js",
    "deploy": "npm run validate && npm run build:prod && node scripts/deploy.js",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "setup:assets": "node scripts/setup-assets.js",
    "optimize:images": "node scripts/optimize-images.js",
    "generate:icons": "node scripts/generate-icons.js",
    "generate:responsive": "node scripts/generate-responsive-images.js",
    "generate:screenshots": "node scripts/generate-screenshots.js",
    "seo:check": "lighthouse https://david-barrera.com --output=html --output-path=./lighthouse-report.html",
    "sitemap:generate": "node scripts/generate-sitemap.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
